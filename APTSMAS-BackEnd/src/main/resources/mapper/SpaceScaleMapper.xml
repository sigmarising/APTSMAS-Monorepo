<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aptsmas.dataservice.mapper.SpaceScaleMapper">
    <select id="getSpaceScaleItemByType" resultType="com.aptsmas.dataservice.entity.SpaceScaleItem">
        SELECT type, content
        FROM space_scale
        WHERE type = #{type}
    </select>
</mapper>